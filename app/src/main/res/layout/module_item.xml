<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:circularflow_radiusInDP="10">

	<androidx.cardview.widget.CardView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:backgroundTint="#FFFFFF"
		app:cardElevation="0dp"
		app:contentPaddingTop="40dip"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.cardview.widget.CardView
			android:id="@+id/itemCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="24dip"
			app:cardCornerRadius="15dip"
			app:cardElevation="0dp"
			app:contentPaddingBottom="24dip"
			app:contentPaddingTop="24dip">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/topicImage"
					android:layout_width="match_parent"
					android:layout_height="60dip"
					android:layout_gravity="center|clip_vertical"
					tools:srcCompat="@tools:sample/backgrounds/scenic" />

				<TextView
					android:id="@+id/topic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="40dip"
					android:layout_marginTop="8dip"
					android:layout_marginBottom="8dip"
					android:textColor="#000000"
					android:textSize="24sp"
					android:textStyle="bold" />

				<Button
					android:id="@+id/startLearning"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="40dip"
					android:layout_marginEnd="30dip"
					android:text="@string/start_learning"
					android:textAlignment="textStart"
					android:textColor="#000000"
					app:cornerRadius="0dp"
					app:icon="@drawable/arrow_forward"
					app:iconGravity="end"
					app:iconSize="20dp"
					app:iconTint="#000000" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>